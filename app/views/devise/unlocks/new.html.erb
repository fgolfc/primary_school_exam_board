<div class="card mx-auto w-50 mb-4">
  <div class="card-body">
    <h5 class="mb-4 text-center"><%= t("devise.unlocks.new.title") %></h5>

    <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, class: 'form' }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>

      <div class="actions mt-3">
        <%= f.submit t("devise.unlocks.new.send_instructions"), class: 'btn btn-primary' %>
      </div>
    <% end %>

    <div class="mt-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
