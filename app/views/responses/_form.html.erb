<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          回答入力フォーム
        </div>
        <div class="card-body">
          <%= form_with(model: [@post, @response], local: true) do |form| %>
            <% if @response.errors.any? %>
              <div id="error_explanation" class="alert alert-danger">
                <h2><%= pluralize(@response.errors.count, "error") %> prohibited this post from being saved:</h2>
                <ul>
                  <% @response.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <%= form.hidden_field :post_id, value: @post.id %>

            <div class="form-group">
              <%= form.text_area :body, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= form.submit "送信", class: "btn", style: "background-color: lightpink; font-size: 12px;" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
