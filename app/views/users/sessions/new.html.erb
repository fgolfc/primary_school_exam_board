<div class="card mx-auto w-50 mb-4">
  <div class="card-body">
    <h5 class="mb-4 text-center">ログイン</h5>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="row mb-3">
        <div class="col">
          <%= f.label :email, class: 'form-label' %>
        </div>
        <div class="col">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
      </div>
      
      <div class="row mb-3">
        <div class="col">
          <%= f.label :password, class: 'form-label' %>
        </div>
        <div class="col">
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="row mb-3">
          <div class="col">
            <%= f.label :remember_me, class: 'form-label' %>
          </div>
          <div class="col">
            <%= f.check_box :remember_me %>
          </div>
        </div>
      <% end %>

      <div class="actions mt-3 d-flex justify-content-center">
        <%= f.submit "ログイン", class: 'btn btn-custom', style: 'background-color: #ffcccc;' %>
      </div>
    <% end %>

    <div class="text-center mt-3">
      <%= link_to "ゲストログイン", new_session_path(:user, email: 'guest@example.com', password: 'password'), class: "btn btn-outline-secondary" %>
    </div>

    <% if current_user&.admin? %>
      <div class="text-center mt-3">
        <%= link_to "管理者ログイン", new_admin_session_path, class: "btn btn-outline-secondary" %>
      </div>
    <% end %>
  </div>
</div>