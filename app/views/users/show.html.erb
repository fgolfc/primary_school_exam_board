<h5 class="mb-4 text-center">マイページ</h5>

<div class="card mx-auto w-50 mb-4">
  <div class="card-body">
    <div class="row mb-3">
      <div class="col">
        <label class="form-label"><%= t('activerecord.attributes.user.nickname') %></label>
      </div>
      <div class="col">
        <p class="form-control-static"><%= @user.nickname %></p>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col">
        <label class="form-label"><%= t('activerecord.attributes.user.email') %></label>
      </div>
      <div class="col">
        <p class="form-control-static"><%= @user.email %></p>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col">
        <label class="form-label"><%= t('activerecord.attributes.user.password') %></label>
      </div>
      <div class="col">
        <p class="form-control-static">********</p>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col">
        <label class="form-label"><%= t('activerecord.attributes.user.living_area') %></label><br>
        <label class="form-label" style="font-size: 0.8em;"><%= raw t('activerecord.attributes.user.living_area_comment') %></label>
      </div>
      <div class="col">
        <p class="form-control-static"><%= I18n.t("activerecord.attributes.user.prefectures.#{@user.prefecture}") %></p>
      </div>
    </div>
  </div>
</div>

<div class="d-flex justify-content-center mb-4">
  <%= link_to 'マイページを変更する', edit_user_registration_path, class: 'btn btn-custom', style: "background-color: #ffcccc;" %>
</div>